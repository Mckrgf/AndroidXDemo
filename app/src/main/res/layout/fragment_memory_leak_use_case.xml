<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_use_case_a"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/LEAK_A" />

        <TextView
            android:id="@+id/tv_use_case_b"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/LEAK_B" />

        <TextView
            android:id="@+id/tv_use_case_c"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/LEAK_C" />

        <TextView
            android:id="@+id/tv_use_case_d"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="用例D" />

    </LinearLayout>

</layout>
